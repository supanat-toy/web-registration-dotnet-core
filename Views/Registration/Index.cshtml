@{
    ViewData["Title"] = "Attendees";
}
<link rel="stylesheet" href="~/css/reigstration-themes/material-bootstrap-wizard.css" />
<link rel="stylesheet" href="~/css/registration.css" />
<div>
    <!--   Big container   -->
	    <div class="container">
	        <div class="row">
		        <div class="col-sm-8 col-sm-offset-2">
		            <!--      Wizard container        -->
		            <div class="wizard-container">
		                <div class="card wizard-card" data-color="green" id="wizardProfile">
		                    <form action="" method="">
		                <!--        You can switch " data-color="purple" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->

		                    	<div class="wizard-header">
		                        	<h3 class="wizard-title">
		                        	   ยินดีต้อนรับเช้าสู่งาน....
		                        	</h3>
									<h5>ลงทะเบียนก่อนที่จะเข้างาน</h5>
		                    	</div>
								<div class="wizard-navigation">
									<ul>
                                        <li><a href="#account" data-toggle="tab">กรอกข้อมูล</a></li>
			                            <li><a href="#about" data-toggle="tab">ยินยันตัวตน</a></li>
			                            <li><a href="#address" data-toggle="tab">เสร็จสิ้น</a></li>
			                        </ul>
								</div>

		                        <div class="tab-content">
                                    <div class="tab-pane" id="account">
		                                <h4 class="info-text"> What are you doing? (checkboxes) </h4>
		                                <div class="row">
		                                    <div class="col-sm-10 col-sm-offset-1">
		                                        <div class="col-sm-6">
		                                            <div class="choice" data-toggle="wizard-checkbox">
		                                                <input type="radio" name="search_type" value="code">
		                                                <div class="icon">
		                                                    <i class="fa fa-pencil"></i>
		                                                </div>
		                                                <h6>Code</h6>
                                                        <input type="text" class="form-control">
		                                            </div>
		                                        </div>
		                                        <div class="col-sm-6">
		                                            <div class="choice" data-toggle="wizard-checkbox">
		                                                <input type="radio" name="search_type" value="name">
		                                                <div class="icon">
		                                                    <i class="fa fa-laptop"></i>
		                                                </div>
		                                                <h6>Name</h6>
                                                        <input type="text" class="form-control">
		                                            </div>
		                                        </div>
		                                    </div>
		                                </div>
		                            </div>
		                            <div class="tab-pane" id="about">
		                              <div class="row">
		                                	<h4 class="info-text"> Let's start with the basic information (with validation)</h4>
		                                	<div class="col-sm-3 col-sm-offset-2">
		                                    	<div class="picture-container">
		                                        	<div class="picture">
                                        				<img src="/images/reigstration-themes/default-avatar.png" class="picture-src" id="wizardPicturePreview" title=""/>
		                                        	</div>
		                                    	</div>
		                                	</div>
		                                	<div class="col-sm-6">
												<div class="input-group">
													<span class="input-group-addon" style="padding: 10px;">
														<i class="material-icons">face</i>
													</span>
													<div class="" style="padding: 13px 5px 13px 0px;">
			                                          <span>Supanat Techasothon</span>
			                                        </div>
												</div>

												<div class="input-group">
													<span class="input-group-addon" style="padding: 10px;">
														<i class="material-icons">face</i>
													</span>
													<div class="" style="padding: 13px 5px 13px 0px;">
			                                          <span>Supanat Techasothon</span>
			                                        </div>
												</div>
		                                	</div>
		                            	</div>
		                            </div>
		                            
		                            <div class="tab-pane" id="address">
		                                <div class="row">
		                                    <div class="col-sm-12">
		                                        <h4 class="info-text"> ยินดีต้อนรับเข้างาน </h4>
		                                    </div>
		                                </div>
		                            </div>
		                        </div>
		                        <div class="wizard-footer">
		                            <div class="pull-right">
		                                <input type='button' class='btn btn-next btn-fill btn-success btn-wd' name='next' value='Next' />
		                                <input type='button' class='btn btn-finish btn-fill btn-success btn-wd' name='finish' value='Finish' />
		                            </div>

		                            <div class="pull-left">
		                                <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
		                            </div>
		                            <div class="clearfix"></div>
		                        </div>
		                    </form>
		                </div>
		            </div> <!-- wizard container -->
		        </div>
	        </div><!-- end row -->
	    </div> <!--  big container -->
</div>

@section Scripts {
    <script src="~/js/registration.js"></script>

    <!--   Core JS Files   -->
    <script src="~/js/reigstration-themes/jquery-2.2.4.min.js" type="text/javascript"></script>
	<script src="~/js/reigstration-themes/bootstrap.min.js" type="text/javascript"></script>
	<script src="~/js/reigstration-themes/jquery.bootstrap.js" type="text/javascript"></script>

    <script src="~/js/reigstration-themes/material-bootstrap-wizard.js"></script>
    <script src="~/js/reigstration-themes/jquery.validate.min.js"></script>
}