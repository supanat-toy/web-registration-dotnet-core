@model Attendee
@{
    ViewData["Title"] = "Attendees";
}

<link rel="stylesheet" href="~/css/registration.css" />

<div id="registration">
	<img class="image-top-page" src="~/images/background-top.png" />
	
	<div class="middle-view">
		<div class="row content-view">
			<div class="col-md-3 col-xs-12">
				<img class="image-logo" src="~/images/logo.png" /> 
			</div>
			<div class="col-md-9 col-xs-12">
				<form asp-controller="Registration" asp-action="Completion" method="post" class="registration-input">
					<div class="title">ลงทะเบียน</div>
					<div>
						<span class="title-input">รหัสพนักงาน</span>
						<input class="input-code" asp-for="code" />
					</div>
					<div class="text-center">
						<button class="button">Log in</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<img class="image-bottom-page" src="~/images/background-bottom.png" />
</div>